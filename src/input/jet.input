-- Modified Janet system
jb := JBUNDLE(['x, 'y, 'z], ['u, 'v])
jb1 := JBE(jb)
de := JDE(jb, jb1)
ck := CKP(jb, jb1)

eq1 := D('u, ['z, 'z])$jb::jb1 + 'v::jb::jb1*D('u, ['x, 'x])$jb::jb1
eq2 := D('u, ['y, 'y])$jb::jb1
eq3 := D('v, ['z])$jb::jb1
eq4 := D('v, ['y])$jb::jb1 - D('v, ['x])$jb::jb1
janet2 : de := makeSystem [eq1, eq2, eq3, eq4]

setOutMode(4)$ck
-- setRedMode(1)$ck
setSimpMode(1)$ck
complete(janet2)$ck

