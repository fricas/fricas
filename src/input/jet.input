-- transforming Burgers equation into heat equation
jb1 := JBUNDLE(['x, 't], ['u])
jbe1 := JBE(jb1)
jb2 := JBUNDLE(['y, 's], ['v])
jbe2 := JBE(jb2)
jct := JCT(jb1, jb2, [X(1)$jbe2, X(2)$jbe2], [log(U(1)$jbe2)])

burgers : jbe1 := P[2] - P[1, 1] - P([1])^2
transform(burgers)$jct

