-- Symmetries of heat equation
jb := JBUNDLE(['t, 'x], ['u])
sym := SYMANA(jb, ['tau, 'xi], ['eta])
jbe := JBE(jb)
jb2 := JBSA(jb, ['tau, 'xi], ['eta])
jbx := JBX jb2
jbl2 := JBLF(jb2, jbx)
v := ansatz()$sym
eq : jbe := -P[1] + P[2, 2]
ds := detSys([eq])$sym
lds : List jbl2 := [retract(eq) for eq in ds]
r2 := makeSystem(lds)
ck := CKP(jb2, jbl2)
setOutMode(4)$ck
setRedMode(1)$ck
complete r2
