-- Janet system, using linear functions
jb := JBUNDLE(['x, 'y, 'z], ['u])
jbx := JBX jb
jb1 := JBLF(jb, jbx)
de := JDE(jb, jb1)
ck := CKP(jb, jb1)

eq1 := D('u, ['z, 'z])$jb::jb1 + 'y::jb::jb1*D('u, ['x, 'x])$jb::jb1
eq2 := D('u, ['y, 'y])$jb::jb1
janet : de := makeSystem [eq1, eq2]

setOutMode(14)$ck
setRedMode(1)$ck
complete(janet)$ck

)clear all
